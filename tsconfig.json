{
  "compilerOptions": {
    "outDir": "wwwroot/js/compiled",
    "target": "es6",
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "noEmitOnError": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "types": [ "jquery", "bootstrap", "@types/grecaptcha" ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "include": [
    "scripts/**/*.ts"
  ]
}